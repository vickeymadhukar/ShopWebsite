<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bagify - Online Bag Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  <body class="h-full flex flex-col bg-gray-100">

    <header class="bg-white shadow sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-3 flex items-center justify-between">
        <h1 class="text-xl font-bold text-purple-600">ðŸ‘œ Bagify</h1>
        <div class="flex-1 mx-4 hidden md:block">
         <form action="/shop" method="GET" class="flex-1 mx-4 hidden md:block">
  <input
    type="text"
    name="search"
    value="<%= typeof search !== 'undefined' ? search : '' %>"
    placeholder="Search for bags..."
    class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
  />
</form>

        </div>
       <div class="flex items-center space-x-4 text-sm gap-4">
  <img 
    src="" 
    alt="" 
    class="w-8 h-8 rounded-full object-cover border border-gray-300"
  >
  <a href="#" class="hover:text-purple-600 hidden sm:inline"><%= user.name %></a>
  
  <a href="/cart" class="hover:text-purple-600">ðŸ›’ Cart</a>
</div>

      </div>
    </header>



    <% if (typeof success !== 'undefined' && success.length > 0) { %>
  <div id="success-alert" class="absolute w-1/2 top-[10%] bg-green-50 border border-green-200 text-green-800 text-sm font-medium px-6 py-4 rounded-md shadow-md flex items-center justify-between mt-4 mx-6 transition-opacity duration-500">
    <div class="flex items-center justify-center space-x-3">
      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
      </svg>
      <span><%= success %></span>
    </div>
  </div>

  <script>
    setTimeout(() => {
      const alert = document.getElementById('success-alert');
      if (alert) {
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 500); // Remove after fade-out
      }
    }, 3000); // Display for 3 seconds
  </script>
<% } %>


    <!-- MAIN CONTENT -->
    <main class="flex-grow">
      <div class="max-w-7xl mx-auto px-4 py-6 grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Sidebar -->
        <aside class="hidden md:block space-y-6">
          <div>
            <h2 class="font-semibold mb-2">Categories</h2>
           <ul class="space-y-1 text-sm text-gray-700">
              <li><a href="/shop" class="block hover:text-purple-600">All</a></li>
  <li><a href="/shop?category=New Collection" class="block hover:text-purple-600">New Collection</a></li>
  <li><a href="/shop?category=Handbags" class="block hover:text-purple-600">Handbags</a></li>
  <li><a href="/shop?category=Laptop Bags" class="block hover:text-purple-600">Laptop Bags</a></li>
  <li><a href="/shop?category=Backpacks" class="block hover:text-purple-600">Backpacks</a></li>
</ul>
          </div>
          <div>
            <h2 class="font-semibold mb-2">Price</h2>
            <ul class="space-y-1 text-sm text-gray-700">
              <li><a href="#" class="block hover:text-purple-600">Under â‚¹1000</a></li>
              <li><a href="#" class="block hover:text-purple-600">â‚¹1000 - â‚¹2000</a></li>
              <li><a href="#" class="block hover:text-purple-600">Above â‚¹2000</a></li>
            </ul>
          </div>
        </aside>

        <!-- Product Grid -->
        <section class="md:col-span-3 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
        <% products.forEach(function(product) { 
  const discountPercent = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100);
%>
  <div class="bagcontainer bg-white rounded-md shadow hover:shadow-md transition overflow-hidden">
    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" class="w-full h-40 object-cover" />
    
    <div class="p-3">
      <h3 class="text-sm font-semibold text-gray-800"><%= product.name %></h3>
      
      <p class="text-xs text-gray-500 mb-1">Color: <%= product.color %></p>
      <p class="text-xs text-gray-600 mb-1"><%= product.description %></p>
      
      <div class="flex items-center gap-2 mt-1">
        <p class="text-sm text-green-600 font-semibold">â‚¹<%= product.price %></p>
        <p class="text-xs line-through text-gray-400">â‚¹<%= product.originalPrice %></p>
        <span class="text-xs text-green-600 font-bold"><%= discountPercent %>% off</span>
      </div>
      
      <a href="/addtocart/<%=product._id %>" 
   class="mt-2 w-full block text-center bg-purple-600 text-white text-sm py-1.5 rounded hover:bg-purple-700">
  Add to Cart
</a>
    </div>
  </div>
<% }) %>


        
          
        </section>
      </div>
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t">
      <div class="max-w-7xl mx-auto px-4 py-6 text-center text-sm text-gray-500">
        &copy; 2025 Bagify. All rights reserved.
      </div>
    </footer>

  </body>
</html>
